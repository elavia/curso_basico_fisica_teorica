	\newcommand{\dotvb}[1]{ \kern0.7ex \raisebox{1ex}\cdot \kern-1.1ex\vb{ #1 } } % Derivada temporal del vector
	
	\newcommand{\vS}[1]{\ifmmode\boldsymbol{#1}\else$\boldsymbol{#1}$\fi} % Vector usando boldsymbol
	
	
